[client]
<% if @mysql_version >= @mysql_5_7 %>
ssl-mode=preferred
<% end %>
ssl-ca=<%= @home_dir %>/.mysql/root.crt
ssl-cert=<%= @home_dir %>/.mysql/mysql.crt
ssl-key=<%= @home_dir %>/.mysql/mysql.key
user=<%= @username %>
password=<%= @password %>
host=<%= @host %>

<% if @username == 'root' %>
[mysqladmin]
<% if @mysql_version >= @mysql_5_7 %>
ssl-mode=preferred
<% end %>
ssl-ca=<%= @home_dir %>/.mysql/root.crt
ssl-cert=<%= @home_dir %>/.mysql/mysql.crt
ssl-key=<%= @home_dir %>/.mysql/mysql.key
user=<%= @username %>
password=<%= @password %>
host=<%= @host %>
<% end %>
