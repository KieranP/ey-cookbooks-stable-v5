[client]
<% if @mysql_version >= @mysql_5_7 %>
ssl-mode=VERIFY_CA
<% end %>
ssl-ca=<%= File.join(@home_dir, '.mysql/root.crt') %>
ssl-cert=<%= File.join(@home_dir, '.mysql/mysql.crt') %>
ssl-key=<%= File.join(@home_dir, '.mysql/mysql.key') %>
user=<%= @username %>
password=<%= @password %>
host=<%= @host %>

<% if @username == 'root' %>
[mysqladmin]
<% if @mysql_version >= @mysql_5_7 %>
ssl-mode=VERIFY_CA
<% end %>
ssl-ca=<%= File.join(@home_dir, '.mysql/root.crt') %>
ssl-cert=<%= File.join(@home_dir, '.mysql/mysql.crt') %>
ssl-key=<%= File.join(@home_dir, '.mysql/mysql.key') %>
user=<%= @username %>
password=<%= @password %>
host=<%= @host %>
<% end %>
